{
  "name": "trade-show-app-backend",
  "version": "1.32.0",
  "description": "Trade Show Expense Management Backend",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "npm run update-version && tsc && npm run copy-py",
    "update-version": "node scripts/update-version.js",
    "copy-py": "cp src/services/ocr/*.py dist/services/ocr/",
    "migrate": "ts-node src/database/migrate.ts",
    "seed": "ts-node src/database/seed.ts",
    "test": "vitest",
    "test:integration": "vitest run tests/integration",
    "test:integration:schema": "vitest run tests/integration/database-schema.test.ts",
    "test:coverage": "vitest --coverage"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/pdfkit": "^0.17.3",
    "axios": "^1.12.2",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "form-data": "^4.0.4",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "pdfkit": "^0.17.2",
    "pg": "^8.11.3",
    "sharp": "^0.34.4",
    "tesseract.js": "^5.1.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.23",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^1.4.13",
    "@types/node": "^20.19.19",
    "@types/pg": "^8.15.5",
    "@types/uuid": "^9.0.7",
    "@vitest/coverage-v8": "^2.0.4",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3",
    "vitest": "^2.0.4"
  }
}
